{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "jsx": true,
    "useJSXTextNode": true,
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true
    }
  },
  "rules": {
    "import/extensions": [
      0,
      "never",
      {
        "ignorePackages": true
      }
    ],
    "semi": "error",
    "import/no-unresolved": "off"
  },
  "overrides": [
    {
      "files": ["**/*.ts"],
      "parser": "@typescript-eslint/parser",
      "rules": {
        "no-undef": "off"
      }
    }
  ],
  "extends": ["eslint:recommended"],
  "plugins": ["@typescript-eslint"]
}
